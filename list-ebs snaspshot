for region in `aws ec2 describe-regions --region eu-west-1 --query 'Regions[*].RegionName' | jq -r '.[]'`; do echo "$region:"; for snap in `aws ec2 describe-snapshots --owner self --region $region --query 'Snapshots[*].SnapshotId' | jq -r '.[]'`; do aws ec2 describe-snapshot-attribute --snapshot-id $snap --region $region --attribute createVolumePermission --query '[SnapshotId,CreateVolumePermissions[?Group == `all`]]' | jq -r '.[]'; done; echo; done
